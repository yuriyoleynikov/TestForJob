@using TestForJob.Models.ViewModels;
@model IEnumerable<TaskViewModel>

@{
    ViewData["Title"] = "Tasks";
}

<h2>Tasks</h2>

<p>
    <a asp-action="AddTask">Create New Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Task Name
            </th>
            <th>
                Task Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {            
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditTask", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailsTask", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteTask", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
